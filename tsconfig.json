{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "../nonshahrak-api",
    "baseUrl": "../nonshahrak-api",
    "paths": {
      "@src/*": ["*"],
      "@modules/*": ["modules/*"],
      "@constants/*": ["modules/general/constants/*"],
      "@util/*": ["modules/general/util/*"],
      "@error/*": ["modules/error/*"]
    },
    "types": [],
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "exclude": ["vitest.config.ts", "*.test.ts", "./tests/"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "TS_NODE_DEBUG": true
  }
}
